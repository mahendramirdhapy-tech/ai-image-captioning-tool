{
  "version": 2,
  "builds": [
    {
      "src": "api/caption.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/caption",
      "dest": "/api/caption.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1",
      "headers": {
        "Cache-Control": "s-maxage=86400"
      }
    }
  ]
}
